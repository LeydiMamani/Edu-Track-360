<div class="sidebar">
    <div class="sidebar-header">
        <i class="fas fa-user-circle fa-4x" style="color: #ffffff; margin-bottom: 1rem;"></i>
        <h4><%= user.firstName %> <%= user.lastName %></h4>
        <small class="text-muted"><%= user.role %></small>
    </div>

    <div class="sidebar-menu">
        <% if (user.role === 'admin') { %>
            <a href="/admin/dashboard" class="menu-item">
                <i class="fas fa-tachometer-alt"></i>
                <span>Dashboard</span>
            </a>
            <a href="/admin/users" class="menu-item">
                <i class="fas fa-users"></i>
                <span>Usuarios</span>
            </a>
            <a href="/admin/courses" class="menu-item">
                <i class="fas fa-graduation-cap"></i>
                <span>Cursos</span>
            </a>
            <a href="/admin/teachers" class="menu-item">
                <i class="fas fa-chalkboard-teacher"></i>
                <span>Profesores</span>
            </a>
            <a href="/admin/students" class="menu-item">
                <i class="fas fa-user-graduate"></i>
                <span>Estudiantes</span>
            </a>
            <a href="/admin/reports" class="menu-item">
                <i class="fas fa-chart-bar"></i>
                <span>Reportes</span>
            </a>
        <% } else if (user.role === 'teacher') { %>
            <a href="/teacher/dashboard" class="menu-item">
                <i class="fas fa-tachometer-alt"></i>
                <span>Dashboard</span>
            </a>
            <a href="/teacher/courses" class="menu-item">
                <i class="fas fa-book"></i>
                <span>Mis Cursos</span>
            </a>
            <a href="/teacher/assignments" class="menu-item">
                <i class="fas fa-tasks"></i>
                <span>Tareas</span>
            </a>
            <a href="/teacher/grades" class="menu-item">
                <i class="fas fa-star"></i>
                <span>Calificaciones</span>
            </a>
            <a href="/teacher/attendance" class="menu-item">
                <i class="fas fa-clipboard-check"></i>
                <span>Asistencia</span>
            </a>
            <a href="/teacher/reports" class="menu-item">
                <i class="fas fa-chart-line"></i>
                <span>Reportes</span>
            </a>
        <% } else if (user.role === 'student') { %>
            <a href="/student/dashboard" class="menu-item">
                <i class="fas fa-tachometer-alt"></i>
                <span>Dashboard</span>
            </a>
            <a href="/student/courses" class="menu-item">
                <i class="fas fa-book"></i>
                <span>Mis Cursos</span>
            </a>
            <a href="/student/assignments" class="menu-item">
                <i class="fas fa-tasks"></i>
                <span>Tareas</span>
            </a>
            <a href="/student/grades" class="menu-item">
                <i class="fas fa-star"></i>
                <span>Calificaciones</span>
            </a>
        <% } %>
    </div>

    <div class="sidebar-footer">
        <a href="/auth/logout" class="menu-item">
            <i class="fas fa-sign-out-alt"></i>
            <span>Cerrar Sesi√≥n</span>
        </a>
    </div>
</div>

