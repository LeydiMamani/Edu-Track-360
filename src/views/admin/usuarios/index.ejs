<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>EduTrack 360 - Gestión de Usuarios</title>
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <!-- Font Awesome -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
    <!-- Google Fonts -->
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600;700&display=swap" rel="stylesheet">
    <!-- DataTables CSS -->
    <link href="https://cdn.datatables.net/1.11.5/css/dataTables.bootstrap5.min.css" rel="stylesheet">
    <style>
        :root {
            --sidebar-width: 280px;
            --primary-color: #4361ee;
            --secondary-color: #3f37c9;
            --success-color: #2ec4b6;
            --info-color: #0096c7;
            --warning-color: #f9c74f;
            --danger-color: #ef476f;
            --dark-color: #1b263b;
            --light-color: #f8f9fa;
        }
        
        body {
            font-family: 'Poppins', sans-serif;
            background-color: #f0f2f5;
        }

        .sidebar {
            width: var(--sidebar-width);
            position: fixed;
            top: 0;
            left: 0;
            height: 100vh;
            background: linear-gradient(180deg, var(--dark-color) 0%, var(--secondary-color) 100%);
            padding-top: 1.5rem;
            transition: all 0.3s ease;
            box-shadow: 4px 0 10px rgba(0,0,0,0.1);
            z-index: 1000;
        }

        .main-content {
            margin-left: var(--sidebar-width);
            padding: 2rem;
            min-height: 100vh;
            background-color: #f0f2f5;
            transition: all 0.3s ease;
        }

        .card {
            border: none;
            border-radius: 15px;
            box-shadow: 0 4px 6px rgba(0,0,0,0.07);
            margin-bottom: 2rem;
        }

        .card-header {
            background-color: white;
            border-bottom: 1px solid rgba(0,0,0,0.05);
            padding: 1.25rem;
            border-radius: 15px 15px 0 0;
        }

        .card-title {
            margin: 0;
            color: var(--dark-color);
            font-weight: 600;
        }

        .btn-primary {
            background-color: var(--primary-color);
            border-color: var(--primary-color);
        }

        .btn-primary:hover {
            background-color: var(--secondary-color);
            border-color: var(--secondary-color);
        }

        .table th {
            font-weight: 600;
            color: var(--dark-color);
            border-bottom-width: 1px;
            padding: 1rem;
        }

        .table td {
            padding: 1rem;
            vertical-align: middle;
        }

        .badge {
            padding: 0.5em 0.75em;
            font-weight: 500;
        }

        .badge-role {
            background-color: var(--info-color);
        }

        .badge-status {
            background-color: var(--success-color);
        }

        .badge-status.inactive {
            background-color: var(--danger-color);
        }

        .action-buttons .btn {
            padding: 0.25rem 0.5rem;
            font-size: 0.875rem;
        }

        .user-avatar {
            width: 40px;
            height: 40px;
            border-radius: 50%;
            background-color: var(--primary-color);
            color: white;
            display: flex;
            align-items: center;
            justify-content: center;
            font-weight: 600;
            margin-right: 1rem;
        }

        @media (max-width: 992px) {
            .sidebar {
                width: 70px;
            }

            .main-content {
                margin-left: 70px;
            }
        }
    </style>
</head>
<body>
    <div class="d-flex">
        <!-- Sidebar -->
        <nav class="sidebar">
            <div class="logo-container">
                <h4 class="text-white text-center mb-4">EduTrack 360</h4>
            </div>
            <ul class="nav flex-column">
                <li class="nav-item">
                    <a class="nav-link text-white" href="/admin/dashboard">
                        <i class="fas fa-tachometer-alt me-2"></i>
                        <span>Dashboard</span>
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link text-white active" href="/admin/usuarios">
                        <i class="fas fa-users me-2"></i>
                        <span>Usuarios</span>
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link text-white" href="/admin/cursos">
                        <i class="fas fa-book me-2"></i>
                        <span>Cursos</span>
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link text-white" href="/admin/reportes">
                        <i class="fas fa-chart-bar me-2"></i>
                        <span>Reportes</span>
                    </a>
                </li>
            </ul>
        </nav>

        <!-- Main Content -->
        <main class="main-content">
            <!-- Flash Messages -->
            <% if(typeof success_msg !== 'undefined' && success_msg.length > 0) { %>
                <div class="alert alert-success alert-dismissible fade show" role="alert">
                    <%= success_msg %>
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            <% } %>

            <% if(typeof error_msg !== 'undefined' && error_msg.length > 0) { %>
                <div class="alert alert-danger alert-dismissible fade show" role="alert">
                    <%= error_msg %>
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            <% } %>

            <div class="container-fluid">
                <div class="d-flex justify-content-between align-items-center mb-4">
                    <h1 class="h3">Gestión de Usuarios</h1>
                    <a href="/admin/usuarios/crear" class="btn btn-primary">
                        <i class="fas fa-user-plus me-2"></i>Nuevo Usuario
                    </a>
                </div>

                <div class="card">
                    <div class="card-body">
                        <div class="table-responsive">
                            <table id="usuariosTable" class="table table-hover">
                                <thead>
                                    <tr>
                                        <th>Usuario</th>
                                        <th>Email</th>
                                        <th>Rol</th>
                                        <th>Estado</th>
                                        <th>Acciones</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <% usuarios.forEach(usuario => { %>
                                        <tr>
                                            <td>
                                                <div class="d-flex align-items-center">
                                                    <div class="user-avatar">
                                                        <%= usuario.nombre.charAt(0).toUpperCase() %>
                                                    </div>
                                                    <%= usuario.nombre %>
                                                </div>
                                            </td>
                                            <td><%= usuario.email %></td>
                                            <td>
                                                <span class="badge badge-role">
                                                    <%= usuario.rol.charAt(0).toUpperCase() + usuario.rol.slice(1) %>
                                                </span>
                                            </td>
                                            <td>
                                                <span class="badge <%= usuario.estado === 'activo' ? 'badge-status' : 'badge-status inactive' %>">
                                                    <%= usuario.estado.charAt(0).toUpperCase() + usuario.estado.slice(1) %>
                                                </span>
                                            </td>
                                            <td>
                                                <div class="action-buttons">
                                                    <% if (usuario.email !== 'admin@edutrack360.com') { %>
                                                        <form action="/admin/usuarios/<%= usuario._id %>/estado" method="POST" class="d-inline">
                                                            <button type="submit" class="btn btn-<%= usuario.estado === 'activo' ? 'danger' : 'success' %> btn-sm">
                                                                <i class="fas fa-<%= usuario.estado === 'activo' ? 'ban' : 'check' %>"></i>
                                                                <%= usuario.estado === 'activo' ? 'Desactivar' : 'Activar' %>
                                                            </button>
                                                        </form>
                                                    <% } %>
                                                </div>
                                            </td>
                                        </tr>
                                    <% }); %>
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </main>
    </div>

    <!-- Bootstrap Bundle with Popper -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <!-- jQuery -->
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <!-- DataTables -->
    <script src="https://cdn.datatables.net/1.11.5/js/jquery.dataTables.min.js"></script>
    <script src="https://cdn.datatables.net/1.11.5/js/dataTables.bootstrap5.min.js"></script>
    <!-- SweetAlert2 -->
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script>
        $(document).ready(function() {
            // Inicializar DataTables
            $('#usuariosTable').DataTable({
                language: {
                    url: '//cdn.datatables.net/plug-ins/1.11.5/i18n/es-ES.json'
                },
                order: [[0, 'asc']],
                pageLength: 10,
                responsive: true
            });

            // Manejar mensajes flash
            <% if (messages.success) { %>
                Swal.fire({
                    icon: 'success',
                    title: 'Éxito',
                    text: '<%= messages.success %>',
                    timer: 3000,
                    showConfirmButton: false,
                    toast: true,
                    position: 'top-end'
                });
            <% } %>

            <% if (messages.error) { %>
                Swal.fire({
                    icon: 'error',
                    title: 'Error',
                    text: '<%= messages.error %>',
                    timer: 3000,
                    showConfirmButton: false,
                    toast: true,
                    position: 'top-end'
                });
            <% } %>

            // Confirmar desactivación de usuario
            $('form').on('submit', function(e) {
                e.preventDefault();
                const form = this;
                const isDeactivating = form.querySelector('.btn-danger');

                Swal.fire({
                    title: `¿Estás seguro de ${isDeactivating ? 'desactivar' : 'activar'} este usuario?`,
                    text: `El usuario ${isDeactivating ? 'no' : ''} podrá acceder al sistema.`,
                    icon: 'warning',
                    showCancelButton: true,
                    confirmButtonColor: isDeactivating ? '#ef476f' : '#2ec4b6',
                    cancelButtonColor: '#6c757d',
                    confirmButtonText: 'Sí, continuar',
                    cancelButtonText: 'Cancelar'
                }).then((result) => {
                    if (result.isConfirmed) {
                        form.submit();
                    }
                });
            });
        });
    </script>
</body>
</html> 